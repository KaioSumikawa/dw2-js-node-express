<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Alterar cliente</h1>
            </div>
            <div class="card-body">
    <!-- Formulário de edição -->
    <form action="/clientes/update/<%= cliente.id %>" method="POST">
        
        <input type="hidden" name="id" value="<%= cliente.id %>">
        <div class="mb-3">
            <label>Nome do cliente:</label>
            <input type="text" name="nome" placeholder="Insira o nome do cliente" class="form-control" value="<%= cliente.nome %>" required>
        </div>
       
        <div class="mb-3">
            <label>CPF do cliente:</label>
            <input type="text" name="cpf" placeholder="Insira o CPF do cliente" class="form-control" value="<%= cliente.cpf %>" required>
        </div>
       
        <div class="mb-3">
            <label>Endereço do cliente:</label>
            <input type="text" name="endereco" placeholder="Insira o endereço do cliente" class="form-control" value="<%= cliente.endereco %>" required>
        </div>
       
        <div class="mb-3">
            <input onclick="return confirm('Confirma as alterações realizadas para o cliente <%= cliente.nome %>?')" type="submit" class="btn btn-warning" value="Alterar">

            <a href="/clientes">
            <input type="button" class="btn btn-danger" value="Cancelar">
        </div>
    </form>
</div>
        </div>
    </div>
 
    <%- include ('partials/footer.ejs') %>